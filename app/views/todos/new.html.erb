<h1>Create new todo</h1>

<% if flash.any? %>
    <h2>The following error prevented the todo from being save</h2>
    <ul>
        <% flash[:errors].each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for @todo do |f| %>
    <p>
        <%= f.label :name %> <br>
        <%= f.text_field :name %>
    </p>
    <p>
        <%=  f.label :description %> <br>
        <%=  f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>